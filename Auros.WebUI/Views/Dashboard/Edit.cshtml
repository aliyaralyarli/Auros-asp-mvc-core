@model Card
@{
    ViewData["Title"] = "Edit";
    Layout = "_UserDashboardLayout";
}

<div class="container">
    <form method="post" style="margin:auto; width: 40%;margin-top: 50px;">
        <h1>Edit</h1>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Card number</label>
            <input type="hidden" asp-for="Id" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <input type="hidden" asp-for="ExpireDate" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <input type="text" asp-for="CardNumber" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button asp-controller="Dashboard" asp-action="Cards" class="btn btn-primary">Cancel</button>
    </form>
</div>