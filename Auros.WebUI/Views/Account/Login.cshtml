@model SignInFormModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}
<div class="login-page">
    <div class="form">
        <form class="login-form" method="post">
            <input type="text" placeholder="Username" name="Username" asp-for="Username" />
            <input type="password" placeholder="password" name="Password" asp-for="Password" />
            <button>Login</button>
            <p class="message1">Already registered? <a asp-controller="Account" asp-action="Index">Registration</a></p>
            @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
            {
                if (@ViewBag.Message == "Ugurlu")
                {
                    @*<p class="alert alert-info message"><i class="fab far fa-check-circle"></i>@ViewBag.Message</p>*@
                }
                else
                {
                    <p class="alert alert-warning message">@ViewBag.Message</p>
                }
            }
        </form>
    </div>
</div>
<script src="~/Assets/JS/app.js"></script>