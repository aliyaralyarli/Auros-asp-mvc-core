@model SignInFormModel
@{
    ViewData["Title"] = "Logout";
    Layout = "_UserDashboardLayout";
}


<div class="container">
    <form method="post" asp-action="LogoutConfirm" style="margin:auto; width: 40%;margin-top: 50px;">
        <h1>@Sidebar.Hesabdan_Çıxmaq_istəyirsiniz?</h1>
        <div class="mb-3">
            @*<label for="exampleInputEmail1" class="form-label">Card Number</label>*@
            <input type="hidden" asp-for="Id" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <input type="hidden" asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <input type="hidden" asp-for="Password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" readonly>
        </div>
        <button type="submit" class="btn btn-primary">Yes</button>
        <button asp-controller="Dashboard" asp-action="UserDashboard" class="btn btn-primary">No</button>
    </form>
</div>